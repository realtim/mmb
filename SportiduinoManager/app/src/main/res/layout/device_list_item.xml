<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_padding"
        android:layout_toStartOf="@+id/device_connect"
        tools:ignore="SelectableText"
        tools:text="Device XXX" />

    <ImageButton
        android:id="@+id/device_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_padding"
        android:contentDescription="@string/device_connect_description"
        android:padding="@dimen/default_padding"
        android:src="@drawable/ic_disconnected"
        app:tint="@android:color/background_light" />

</RelativeLayout>
