<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:clickable="false"
    android:focusable="false">

    <TextView
        android:id="@+id/list_point_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/default_padding"
        android:gravity="start|center_vertical"
        android:text="@string/list_point_name"
        app:layout_constraintEnd_toStartOf="@id/list_point_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_point_time"
        android:layout_width="112dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/default_padding"
        android:gravity="center|end"
        android:text="@string/list_point_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_point_name"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
